<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inovex.zabbixmobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" >
    </supports-screens>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" >
    </uses-permission>
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.inovex.zabbixmobile.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.inovex.zabbixmobile.activities.EventsActivity"
            android:label="@string/activity_events" >
        </activity>
        <activity
            android:name="com.inovex.zabbixmobile.activities.ProblemsActivity"
            android:label="@string/activity_problems" >
        </activity>
        <activity
            android:name="com.inovex.zabbixmobile.activities.ChecksActivity"
            android:label="@string/activity_checks" >
        </activity>
        <activity
            android:name="com.inovex.zabbixmobile.activities.ScreensActivity"
            android:label="@string/activity_screens" >
        </activity>
        <activity
            android:name="com.inovex.zabbixmobile.activities.ZaxPreferenceActivity"
            android:label="@string/activity_preferences" >
        </activity>

        <service android:name="com.inovex.zabbixmobile.data.ZabbixDataService" >
        </service>

        <receiver android:name="com.inovex.zabbixmobile.ExceptionBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.inovex.zabbixmobile.EXCEPTION" >
                </action>
            </intent-filter>
        </receiver>
    </application>

</manifest>