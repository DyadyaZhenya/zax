<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="6dip">
	<ImageView
		android:id="@+id/events_entry_status"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_alignParentTop="true"
		android:layout_marginRight="6dip"
		android:layout_marginTop="9dip" />
	<TextView
		android:id="@+id/severity_list_item_host"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/events_entry_status"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:ellipsize="marquee"
		android:textSize="16sp" />
	<TextView
		android:id="@+id/severity_list_item_clock"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:textSize="12sp" />
	<TextView
		android:id="@+id/severity_list_item_description"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/events_entry_status"
		android:layout_alignParentRight="true"
		android:layout_below="@id/severity_list_item_host"
		android:textSize="12sp" />
</RelativeLayout>
