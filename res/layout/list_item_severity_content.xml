<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/severity_list_item_status"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:layout_marginTop="9dip"
        android:contentDescription="@string/status" />

    <TextView
        android:id="@+id/severity_list_item_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/severity_list_item_host"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/severity_list_item_clock"
        android:layout_toRightOf="@id/severity_list_item_status"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/severity_list_item_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/severity_list_item_host"
        android:layout_toRightOf="@id/severity_list_item_status"
        android:textSize="12sp" />

</merge>