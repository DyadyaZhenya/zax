<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicatorDefault</item>
        <item name="vpiTitlePageIndicatorStyle">@style/TitlePageIndicatorDefault</item>
        <item name="android:textViewStyle">@style/TextViewStyleDefault</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarHorizontalDefault</item>
        <item name="borderDrawable">@drawable/list_fragment</item>
        <item name="borderDrawableAlternateBackground">@drawable/list_fragment_alternate</item>
        <item name="android:textColor">@color/text</item>
        <item name="backgroundDrawer">@color/background_dark_grey</item>
        <item name="spinnerTextColor">@color/white</item>
        <item name="actionMenuColor">@color/white</item>
    </style>

    <style name="Fragment">
        <item name="android:background">@color/background</item>
        <item name="android:padding">@dimen/default_content_padding</item>
    </style>

    <style name="ListFragment">
        <item name="android:background">?borderDrawable</item>
    </style>

    <style name="ListFragmentAlternate">
        <item name="android:background">?borderDrawableAlternateBackground</item>
    </style>

    <style name="GraphFullscreenTheme" parent="android:Theme.Holo" />

    <style name="TextViewStyleDefault" parent="android:Widget.TextView"></style>

    <style name="TabPageIndicatorDefault" parent="Widget.TabPageIndicator">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitlePageIndicatorSeverityDetails">
        <item name="android:background">@color/background_grey</item>
        <item name="selectedColor">@color/text</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">0dp</item>
        <item name="footerIndicatorStyle">none</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TitlePageIndicatorDefault">
        <item name="selectedColor">@color/text</item>
    </style>

    <style name="ProgressBarHorizontalDefault" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:minWidth">100dip</item>
        <item name="android:maxWidth">200dip</item>
        <item name="android:max">100</item>
    </style>

    <style name="Drawer">
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:background">?backgroundDrawer</item>
    </style>

    <style name="ChecksDetailsTitle" parent="TextViewStyleDefault">
        <item name="android:padding">@dimen/default_content_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemHost" parent="TextViewStyleDefault">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:padding">12dip</item>
    </style>

    <style name="HostGroupSpinnerTitle" parent="TextViewStyleDefault">
        <item name="android:textColor">?spinnerTextColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HostGroupSpinnerSubtitle" parent="TextViewStyleDefault">
        <item name="android:textColor">?spinnerTextColor</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="HostGroupSpinnerItem" parent="TextViewStyleDefault">
        <item name="android:padding">7dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">?spinnerTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainMenuItem" parent="TextViewStyleDefault">
        <item name="android:paddingLeft">6dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>