<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        All customizations that are NOT specific to a particular API-level can go here.        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicatorDefault</item>
        <item name="vpiTitlePageIndicatorStyle">@style/TitlePageIndicatorDefault</item>
        <item name="android:textViewStyle">@style/TextViewStyleDefault</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarHorizontalDefault</item>
        <item name="severityDetailsTitlePageIndicator">@style/TitlePageIndicatorSeverityDetails</item>
        <item name="viewWithBorder">@style/ListFragment</item>
        <item name="viewWithBorderAlternate">@style/ListFragmentAlternate</item>
    </style>

    <style name="ListFragment">
        <item name="android:background">@drawable/list_fragment</item>
    </style>

    <style name="ListFragmentAlternate">
        <item name="android:background">@drawable/list_fragment_alternate</item>
    </style>

    <style name="GraphFullscreenTheme" parent="android:Theme.Holo" />

    <style name="TextViewStyleDefault" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TabPageIndicatorDefault" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitlePageIndicatorSeverityDetails">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/background_grey</item>
        <item name="selectedColor">@color/text</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">0dp</item>
        <item name="footerIndicatorStyle">none</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TitlePageIndicatorDefault">
        <item name="android:textColor">@color/text</item>
        <item name="selectedColor">@color/text</item>
    </style>

    <style name="ProgressBarHorizontalDefault" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:minWidth">100dip</item>
        <item name="android:maxWidth">200dip</item>
        <item name="android:max">100</item>
    </style>

</resources>