<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        All customizations that are NOT specific to a particular API-level can go here.        <item name="vpiTabPageIndicatorStyle">@style/MyTabPageIndicator</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>
    
    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="MyTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="SeverityDetailsTitlePageIndicator">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/background_grey</item>
        <item name="selectedColor">@color/text</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">0dp</item>
        <item name="footerIndicatorStyle">none</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItemsDetailsTitlePageIndicator">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/background_grey</item>
        <item name="selectedColor">@color/text</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">0dp</item>
        <item name="footerIndicatorStyle">none</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChecksTitlePageIndicator">
        <item name="android:textColor">@color/text</item>
        <item name="selectedColor">@color/text</item>
    </style>

    <style name="ListFragment">
        <item name="android:background">@drawable/list_fragment</item>
    </style>

    <style name="ListFragmentWhiteBackground">
        <item name="android:background">@drawable/list_fragment_white_background</item>
    </style>
    
    <style name="GraphFullscreenTheme" parent="android:Theme.Holo" />

</resources>