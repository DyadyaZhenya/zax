<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inovex.zabbixmobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.inovex.zabbixmobile.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.inovex.zabbixmobile.activities.EventsActivity"
            android:label="@string/activity_events" >
        </activity>
        
        <activity
            android:name="com.inovex.zabbixmobile.activities.ChecksActivity"
            android:label="@string/activity_checks" >
        </activity>
        
        <activity
            android:name="com.inovex.zabbixmobile.activities.ScreensActivity"
            android:label="@string/activity_screens" >
        </activity>

        <service android:name="com.inovex.zabbixmobile.data.ZabbixDataService" >
        </service>

    </application>

</manifest>