<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicatorDefault</item>
        <item name="vpiTitlePageIndicatorStyle">@style/TitlePageIndicatorDefault</item>
        <item name="android:textViewStyle">@style/TextViewStyleDefault</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarHorizontalDefault</item>
        <item name="borderDrawable">@drawable/list_fragment_light</item>
        <item name="borderDrawableAlternateBackground">@drawable/list_fragment_light_alternate</item>
        <item name="defaultTextColor">@color/black</item>
        <item name="backgroundDrawer">@color/dark_grey</item>
        <item name="spinnerTextColor">@color/white</item>
        <item name="actionMenuColor">@color/dark_grey</item>
        <item name="graphTextColor">@color/black</item>
        <item name="backgroundFragment">@color/white</item>
        <item name="backgroundFragmentAlternate">@color/light_grey</item>
        <item name="pageIndicatorSelectedColor">@color/black</item>
        <item name="pageIndicatorBackground">@color/grey</item>
        <item name="android:panelBackground">@color/dark_grey</item>
        <item name="android:popupBackground">@color/dark_grey</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="AppThemeDark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicatorDefault</item>
        <item name="vpiTitlePageIndicatorStyle">@style/TitlePageIndicatorDefault</item>
        <item name="android:textViewStyle">@style/TextViewStyleDefault</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarHorizontalDefault</item>
        <item name="borderDrawable">@drawable/list_fragment_dark</item>
        <item name="borderDrawableAlternateBackground">@drawable/list_fragment_dark_alternate</item>
        <item name="defaultTextColor">@color/white</item>
        <item name="backgroundDrawer">@color/dark_grey</item>
        <item name="spinnerTextColor">@color/white</item>
        <item name="actionMenuColor">@color/white</item>
        <item name="graphTextColor">@color/white</item>
        <item name="backgroundFragment">@color/black</item>
        <item name="backgroundFragmentAlternate">@color/dark_grey</item>
        <item name="pageIndicatorSelectedColor">@color/white</item>
        <item name="pageIndicatorBackground">@color/medium_grey</item>
        <item name="android:panelBackground">@color/dark_grey</item>
        <item name="android:popupBackground">@color/dark_grey</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
    </style>

    <!--This attribute will occur an error while compiling with sdk build tools 1.3.0-->
<!--    <style name="android:textAppearanceLargePopupMenu">
        <item name="android:textColor">@color/white</item>
    </style>-->

    <style name="Fragment">
        <item name="android:background">?attr/backgroundFragment</item>
    </style>

    <style name="FragmentWithPadding" parent="Fragment">
        <item name="android:background">?attr/backgroundFragment</item>
        <item name="android:padding">@dimen/default_content_padding</item>
    </style>

    <style name="ListFragment">
        <item name="android:background">?borderDrawable</item>
        <item name="android:paddingRight">1dp</item>
    </style>

    <style name="ListFragmentAlternate" parent="ListFragment">
        <item name="android:background">?borderDrawableAlternateBackground</item>
    </style>

    <style name="TextViewStyleDefault" parent="android:Widget.TextView">
        <item name="android:textColorPrimary">?defaultTextColor</item>
    </style>

    <style name="TabPageIndicatorDefault" parent="Widget.TabPageIndicator">
        <item name="android:textColor">?defaultTextColor</item>
        <item name="selectedColor">?defaultTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitlePageIndicatorSeverityDetails">
        <item name="android:background">?pageIndicatorBackground</item>
        <item name="android:textColor">?defaultTextColor</item>
        <item name="selectedColor">?pageIndicatorSelectedColor</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">0dp</item>
        <item name="footerIndicatorStyle">none</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TitlePageIndicatorDefault">
        <item name="android:textColor">?defaultTextColor</item>
        <item name="selectedColor">?pageIndicatorSelectedColor</item>
    </style>

    <style name="ProgressBarHorizontalDefault" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:minWidth">100dip</item>
        <item name="android:maxWidth">200dip</item>
        <item name="android:max">100</item>
    </style>

    <style name="Drawer">
        <item name="android:dividerHeight">0dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:background">?backgroundDrawer</item>
    </style>

    <style name="ChecksDetailsTitle" parent="TextViewStyleDefault">
        <item name="android:padding">@dimen/default_content_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemHost" parent="TextViewStyleDefault">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="ListItemServer" parent="TextViewStyleDefault">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HostGroupSpinnerTitle" parent="TextViewStyleDefault">
        <item name="android:textColor">?spinnerTextColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HostGroupSpinnerSubtitle" parent="TextViewStyleDefault">
        <item name="android:textColor">?spinnerTextColor</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="HostGroupSpinnerItem" parent="TextViewStyleDefault">
        <item name="android:padding">7dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">?spinnerTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainMenuItem" parent="TextViewStyleDefault">
        <item name="android:paddingLeft">6dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Sherlock.ListPopupWindow" parent="Widget">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Sherlock.Light.ListPopupWindow" parent="Widget">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@drawable/button_radio</item>
    </style>

    <style name="ManageServersButton" parent="android:style/Widget.Button.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ServerDetailsLabel" parent="android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

</resources>