    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/host_groups_spinner_title"
        style="@style/HostGroupSpinnerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/host_groups_spinner_subtitle"
        style="@style/HostGroupSpinnerSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/host_groups_spinner_title" />

</RelativeLayout>