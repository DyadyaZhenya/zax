<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <fragment
        android:id="@+id/checks_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        class="com.inovex.zabbixmobile.activities.fragments.ChecksHostsFragment" />

    <fragment
        android:id="@id/checks_details"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        class="com.inovex.zabbixmobile.activities.fragments.ChecksApplicationsFragment" />

    <fragment
        android:id="@+id/checks_items_details"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        class="com.inovex.zabbixmobile.activities.fragments.ChecksItemsFragment" />

</LinearLayout>